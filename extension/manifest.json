{
    "manifest_version": 3,
    "name": "AdBoard - Facebook Ads Saver",
    "version": "1.0.0",
    "description": "Save Facebook ads to your AdBoard collection with one click",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://www.facebook.com/*",
        "https://facebook.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.facebook.com/*",
                "https://facebook.com/*"
            ],
            "js": [
                "src/content.js"
            ],
            "css": [
                "src/content.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "src/popup.html",
        "default_title": "Save Facebook Ad to AdBoard"
    },
    "background": {
        "service_worker": "src/background.js"
    },
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    }
}